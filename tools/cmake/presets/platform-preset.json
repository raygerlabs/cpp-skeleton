{
  "version": 4,
  "configurePresets": [
    {
      "name": "windows",
      "description": "Preset for Windows platform",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "hidden": true
    },
    {
      "name": "unix",
      "description": "Preset for Unix platforms",
      "condition": {
        "type": "inList",
        "string": "${hostSystemName}",
        "list": ["Darwin", "Linux"]
      },
      "hidden": true
    }
  ]
}
