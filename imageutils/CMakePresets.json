{
  "version": 6,
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default",
      "description": "Default preset",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "ENABLE_PCH": true,
        "ENABLE_TESTS": true,
        "ENABLE_BENCHMARKS": true,
        "ENABLE_EXAMPLES": true,
        "ENABLE_COVERAGE": true,
        "ENABLE_DOXYGEN": true
      }
    },
    {
      "name": "gcc-default",
      "displayName": "GNU C/C++ (Default)",
      "description": "GNU C/C++ default preset",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-gcc.cmake",
      "inherits": "default"
    },
    {
      "name": "clang-default",
      "displayName": "Clang (LLVM) C/C++ (Default)",
      "description": "Clang (LLVM) C/C++ default preset",
      "hidden": true,
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-clang.cmake",
      "inherits": "default"
    },
    {
      "name": "msvc-default",
      "displayName": "Microsoft Visual C/C++ (Default)",
      "description": "Microsoft Visual C/C++ default preset",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-msvc.cmake",
      "inherits": "default"
    },
    {
      "name": "gcc-debug",
      "displayName": "GNU C/C++ (Debug)",
      "description": "GNU C/C++ debug preset",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CONFIGURATION_TYPES": "Debug",
        "CMAKE_PREFIX_PATH": "${sourceDir}/build/generators;${sourceDir}/build/Debug/generators",
        "CMAKE_MODULE_PATH": "${sourceDir}/build/generators;${sourceDir}/build/Debug/generators"
      },
      "inherits": "gcc-default"
    },
    {
      "name": "gcc-profile",
      "displayName": "GNU C/C++ (Profile)",
      "description": "GNU C/C++ profile preset",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CONFIGURATION_TYPES": "RelWithDebInfo",
        "CMAKE_PREFIX_PATH": "${sourceDir}/build/generators;${sourceDir}/build/RelWithDebInfo/generators",
        "CMAKE_MODULE_PATH": "${sourceDir}/build/generators;${sourceDir}/build/RelWithDebInfo/generators"
      },
      "inherits": "gcc-default"

    },
    {
      "name": "gcc-release",
