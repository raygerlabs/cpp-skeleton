{
  "version": 6,
  "configurePresets": [
    {
      "name": "ci-default",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CONFIGURATION_TYPES": "Release",
        "CMAKE_PREFIX_PATH": "${sourceDir}/build/generators;${sourceDir}/build/Release/generators",
        "CMAKE_MODULE_PATH": "${sourceDir}/build/generators;${sourceDir}/build/Release/generators",
        "ENABLE_PCH": true,
        "ENABLE_TESTS": true,
        "ENABLE_EXAMPLES": true,
        "ENABLE_COVERAGE": true,
        "ENABLE_DOXYGEN": true
      },
      "hidden": true
    },
    {
      "name": "ci-linux",
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
      "inherits": "ci-default",
      "hidden": true
    },
    {
      "name": "ci-macosx",
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Darwin" },
      "inherits": "ci-default",
      "hidden": true
    },
    { "name": "ci-windows",
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" },
      "inherits": "ci-default",
      "hidden": true
    },
    { "name": "ci-linux-arm",       "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-arm.cmake" },
    { "name": "ci-linux-arm64",     "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-arm64.cmake" },
    { "name": "ci-linux-i386",      "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-i386.cmake" },
    { "name": "ci-linux-mips",      "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-mips.cmake" },
    { "name": "ci-linux-mips64",    "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-mips64.cmake" },
    { "name": "ci-linux-ppc",       "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-ppc.cmake" },
    { "name": "ci-linux-ppc64",     "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-ppc64.cmake" },
    { "name": "ci-linux-s390x",     "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-s390x.cmake" },
    { "name": "ci-linux-x86_64",    "inherits": "ci-linux",   "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-linux-x86_64.cmake" },
    { "name": "ci-macosx-arm64",    "inherits": "ci-macosx",  "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-macosx-arm64.cmake" },
    { "name": "ci-macosx-x86_64",   "inherits": "ci-macosx",  "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-macosx-x86_64.cmake" },
    { "name": "ci-windows-arm",     "inherits": "ci-windows", "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-windows-arm.cmake" },
    { "name": "ci-windows-arm64",   "inherits": "ci-windows", "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-windows-arm64.cmake" },
    { "name": "ci-windows-x86",     "inherits": "ci-windows", "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-windows-x86.cmake" },
    { "name": "ci-windows-x86_64",  "inherits": "ci-windows", "toolchainFile": "${sourceDir}/cmake/toolchains/toolchain-windows-x86_64.cmake" }
  ],
  "buildPresets": [
    { "name": "ci-linux-arm",       "configurePreset": "ci-linux-arm" },
    { "name": "ci-linux-arm64",     "configurePreset": "ci-linux-arm64" },
    { "name": "ci-linux-i386",      "configurePreset": "ci-linux-i386" },
