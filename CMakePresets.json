{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "conf-common",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Profile;Release"
      }
    },
    {
      "name": "gcc",
      "inherits": ["conf-common"],
      "condition": {
        "type": "inList",
        "string": "${hostSystemName}",
        "list": ["Linux", "Darwin"]
      },
      "cacheVariables": {
        "CMAKE_USER_MAKE_RULES_OVERRIDE": "${sourceDir}/cmake/overrides-gcc.cmake"
      }
    },
    {
      "name": "msvc",
      "inherits": ["conf-common"],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_USER_MAKE_RULES_OVERRIDE": "${sourceDir}/cmake/overrides-msvc.cmake"
      }
    }
  ]
}
